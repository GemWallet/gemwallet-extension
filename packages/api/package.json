  "devDependencies": {
    "@gemwallet/constants": "*",
    "@types/jest": "^26.0.15",
    "clean-webpack-plugin": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^26.6.0",
    "prettier": "^2.7.1",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
